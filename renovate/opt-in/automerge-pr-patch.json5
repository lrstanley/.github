{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "automerge": true,
            "automergeSchedule": "on friday",
            "automergeType": "pr",
            "description": [
                "Auto-merge patch-level updates via PR"
            ],
            "ignoreTests": false,
            "matchUpdateTypes": [
                "patch"
            ],
            "platformAutomerge": true
        }
    ]
}
