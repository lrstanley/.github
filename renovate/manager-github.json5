{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "description": [
                "Auto-merge GitHub Actions for minor and patch"
            ],
            "matchManagers": [
                "github-actions"
            ],
            "automerge": true,
            "automergeType": "branch",
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        }
    ]
}
